<h1 class="text-2xl font-bold mb-4">Buat Chatroom Baru</h1>

<%= form_with model: @room, url: rooms_path, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, "Nama Chatroom", class: "block mb-1 font-medium" %>
    <%= f.text_field :name,
          class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring",
          placeholder: "Masukkan nama chatroom...",
          required: true %>
  </div>

  <div>
    <%= f.submit "Buat",
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>
