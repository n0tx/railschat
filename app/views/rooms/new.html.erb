<!-- app/views/rooms/new.html.erb -->
<div class="w-screen p-6">
  <div class="w-full max-w-lg bg-white p-8 rounded-xl shadow-lg">

    <h1 class="text-2xl font-bold mb-6">Buat Chatroom Baru</h1>

    <%= form_with model: @room, url: rooms_path, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, "Nama Chatroom", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :name,
              placeholder: "Masukkan nama chatroom...",
              required: true,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2
                      focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div>
        <%= f.submit "Buat",
              class: "inline-block w-32 text-center px-4 py-2
                      bg-blue-600 hover:bg-blue-700 text-white font-semibold
                      rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>

  </div>
</div>