<div class="w-screen">
  <div class="max-w-3xl mx-auto">

    <!-- Header: avatar + welcome -->
    <div class="flex items-center space-x-3 mb-6">
      <%= image_tag gravatar_url(current_user.email, size: 48),
                    class: "rounded-full" %>
      <span class="text-lg">
        Welcome, <strong><%= current_user.name %></strong>!
      </span>
    </div>

    <!-- Actions: create chatroom & logout -->
    <div class="flex space-x-3 mb-8">
      <%= link_to "Create Chatroom", new_room_path,
                   class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition" %>
      <%= link_to "Logout", logout_path, data: { turbo_method: :delete },
                   class: "px-4 py-2 border border-red-600 hover:bg-red-50 text-red-600 rounded-lg transition" %>
    </div>

    <!-- List of chatrooms -->
    <h2 class="text-2xl font-semibold mb-4">List Chatroom</h2>
    <ul class="space-y-3">
      <% @chatrooms.each do |room| %>
        <li class="flex items-center justify-between p-4 bg-white border rounded-lg shadow-sm">
          <span class="font-medium"><%= room.name %></span>
          <%= link_to "Join", room_path(room),
                       class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition" %>
        </li>
      <% end %>
    </ul>

  </div>
</div>