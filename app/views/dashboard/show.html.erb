<div class="flex items-center space-x-3 mb-4">
  <%= image_tag gravatar_url(current_user.email, size: 48),
                class: "rounded-full" %>
  <span>Welcome, <strong><%= current_user.name %></strong>!</span>
</div>

<div class="mb-4">
  <%= link_to "Create Chatroom", new_room_path,
               class: "px-4 py-2 bg-green-600 text-white rounded" %>
  <%= link_to "Logout", logout_path,
               method: :delete,
               class: "px-4 py-2 bg-red-600 text-white rounded" %>
</div>

<h2 class="text-xl mb-2">List Chatroom</h2>
<ul class="space-y-2">
  <% @chatrooms.each do |room| %>
    <li class="flex justify-between p-2 border rounded">
      <span><%= room.name %></span>
      <%= link_to "Join", room_path(room),
                   class: "px-3 py-1 bg-blue-600 text-white rounded" %>
    </li>
  <% end %>
</ul>